<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="@string/messages_header">
        <SwitchPreferenceCompat
            android:key="signature"
            android:title="@string/signature_title"
            />
        <EditTextPreference
            android:dependency="signature"
            android:defaultValue="test"
            android:entries="@array/reply_entries"
            android:entryValues="@array/reply_values"
            android:key="reply"
            android:title="@string/reply_title"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/sync_header">
        <SwitchPreferenceCompat
            android:key="signature"
            android:title="@string/sync_title"
            />
        <EditTextPreference
            android:dependency="signature"
            android:defaultValue="test"
            android:entries="@array/reply_entries"
            android:entryValues="@array/reply_values"
            android:key="reply"
            android:title="@string/attachment_title"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>